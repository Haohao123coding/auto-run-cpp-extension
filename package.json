{
    "name": "auto-run-cpp-extension",
    "displayName": "Auto Run C++",
    "version": "1.0.0",
    "description": "An extension to run single C++ files with a button.",
    "icon": "images/icon.png",
    "keywords": [
        "vscode",
        "cpp",
        "c++",
        "run"
    ],
    "license": "MIT",
    "author": "Haohao123coding",
    "type": "commonjs",
    "main": "./src/main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/Haohao123coding/auto-run-cpp-extension"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "commands": [
            {
                "command": "auto-run-cpp.compileCommand",
                "title": "Compile C++ File",
                "icon": "$(gear)",
                "category": "C++"
            },
            {
                "command": "auto-run-cpp.runCommand",
                "title": "Run C++ File",
                "icon": "$(play)",
                "category": "C++"
            },
            {
                "command": "auto-run-cpp.compileAndRunCommand",
                "title": "Compile and Run C++ File",
                "icon": "$(play-circle)",
                "category": "C++"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "auto-run-cpp.compileCommand",
                    "group": "navigation@100",
                    "when": "resourceLangId == cpp"
                },
                {
                    "command": "auto-run-cpp.runCommand",
                    "group": "navigation@101",
                    "when": "resourceLangId == cpp"
                },
                {
                    "command": "auto-run-cpp.compileAndRunCommand",
                    "group": "navigation@102",
                    "when": "resourceLangId == cpp"
                }
            ]
        },
        "configuration": {
            "title": "Auto Run C++",
            "properties": {
                "autoRunCpp.additionalCompileFlags": {
                    "type": "string",
                    "default": "-O2 -std=c++14 -static",
                    "description": "额外的 C++ 编译选项"
                }
            }
        }
    },
    "scripts": {
        "test": "echo no_test"
    }
}
